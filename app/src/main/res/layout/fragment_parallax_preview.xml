<me.philio.ghost.ui.widget.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.philio.ghost.ui.ParallaxPreviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <me.philio.ghost.ui.widget.ParallaxImageView
            android:id="@+id/img_post"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="gone" />

        <View
            android:id="@+id/view_padding"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:visibility="visible" />

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="WebViewLayout" />
    </LinearLayout>
</me.philio.ghost.ui.widget.ParallaxScrollView>