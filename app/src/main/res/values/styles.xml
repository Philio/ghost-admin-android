<resources>

    <!-- Default theme -->
    <style name="Theme.Ghost" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
    </style>

    <!-- Default theme with no ActionBar -->
    <style name="Theme.Ghost.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Default theme with no ActionBar for use with nav drawer -->
    <style name="Theme.Ghost.NoActionBar.NavigationDrawer" />

    <!-- Splash theme -->
    <style name="Theme.Ghost.Splash" parent="Theme.AppCompat.NoActionBar" />

</resources>
