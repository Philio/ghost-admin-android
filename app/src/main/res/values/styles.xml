<resources>

    <!-- Default theme -->
    <style name="Theme.Ghost" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/widget_background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/accent_blue_active</item>
        <item name="colorControlNormal">@color/accent_blue</item>
        <item name="android:buttonStyle">@style/Theme.Ghost.Button</item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.Ghost.Dark" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/widget_background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/accent_blue_active</item>
        <item name="colorControlNormal">@color/accent_blue</item>
        <item name="android:buttonStyle">@style/Theme.Ghost.Button</item>
    </style>

    <!-- Dark theme with no ActionBar -->
    <style name="Theme.Ghost.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.Ghost.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Default button style -->
    <style name="Theme.Ghost.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/selector_btn_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.Ghost.AutoCompleteTextView" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/abc_edit_text_material</item>
        <item name="colorAccent">@color/accent_blue_active</item>
        <item name="colorControlNormal">@color/accent_blue</item>
    </style>

</resources>
