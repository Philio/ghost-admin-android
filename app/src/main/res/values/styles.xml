<resources>

    <!-- Default theme -->
    <style name="Theme.Ghost" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/accent_blue_pressed</item>
        <item name="colorControlNormal">@color/accent_blue</item>
        <item name="android:buttonStyle">@style/Theme.Ghost.Button</item>
    </style>

    <!-- Light theme with no ActionBar -->
    <style name="Theme.Ghost.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="toolbarStyle">@style/Theme.Ghost.ToolbarStyle.Light.DarkActionBar</item>
    </style>

    <!-- Light theme with no ActionBar for use with nav drawer -->
    <style name="Theme.Ghost.NoActionBar.NavigationDrawer" />

    <!-- Dark theme -->
    <style name="Theme.Ghost.Dark" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/accent_blue_pressed</item>
        <item name="colorControlNormal">@color/accent_blue</item>
        <item name="android:buttonStyle">@style/Theme.Ghost.Button</item>
    </style>

    <!-- Dark theme with no ActionBar -->
    <style name="Theme.Ghost.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.Ghost.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Toolbar styles, can probably remove some, following appcompat hierarchy for now -->
    <style name="Theme.Ghost.ToolbarStyle" parent="Widget.AppCompat.Toolbar" />

    <style name="Theme.Ghost.ToolbarStyle.Light" />

    <style name="Theme.Ghost.ToolbarStyle.Light.DarkActionBar">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Ghost.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Ghost.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Default button style -->
    <style name="Theme.Ghost.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/selector_btn_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
